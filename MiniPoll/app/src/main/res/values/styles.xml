<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:textSize">20sp</item>
        <item name="android:actionBarStyle">@style/AppTheme.actionBar</item>

    </style>

    <style name="AppTheme.actionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/AppTheme.actionBar.title</item>
        <item name="android:background">@color/colorFont</item>
    </style>

    <style name="AppTheme.actionBar.title">
        <item name="android:textSize">25sp</item>
        <item name = "android:textColor">@color/colorTitle</item>

    </style>

    <style name="main_btn">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:background">@drawable/main_btn_shape</item>
        <item name="android:drawableRight">@drawable/ic_go</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="user_btn">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:colorBackground">@color/colorFont</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="hint">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/helpBlue</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="error">
        <item name="android:textColor">@color/colorError</item>
    </style>

</resources>